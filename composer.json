{
  "name": "drd-plus/theurgist-configurator",
  "license": "MIT",
  "type": "project",
  "description": "Configurator of formulas for Drd+ theurgist",
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/strict-object": "dev-master",
    "drd-plus/theurgist-spells": "dev-master",
    "drd-plus/configurator-skeleton": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0",
    "mockery/mockery": "~1.0",
    "granam/exceptions-hierarchy": "~4.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "rm -fr ./css/generic && ln -s ../vendor/drd-plus/configurator-skeleton/css/generic ./css/generic",
      "rm -fr ./js/generic && ln -s ../vendor/drd-plus/configurator-skeleton/js/generic ./js/generic",
      "rm -fr ./images/generic && ln -s ../vendor/drd-plus/configurator-skeleton/images/generic ./images/generic"
    ]
  }
}
