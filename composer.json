{
  "name": "drdplus/theurgist-calculator",
  "license": "MIT",
  "type": "project",
  "description": "Configurator of formulas for Drd+ theurgist",
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "/var/www/kalkulator.skeleton"
    },
    {
      "type": "vcs",
      "url": "/var/www/rules.skeleton"
    }
  ],
  "require": {
    "php": ">=7.1",
    "drdplus/calculator-skeleton": "~1.0",
    "drdplus/tables": "~2.0"
  },
  "require-dev": {
    "composer/composer": "^1.8",
    "mockery/mockery": "~1.0",
    "phpunit/phpunit": "~7.0",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "pre-autoload-dump": [
      "rm -f DrdPlus/Tests/CalculatorSkeleton && ln -s ../../vendor/drdplus/calculator-skeleton/DrdPlus/Tests/CalculatorSkeleton DrdPlus/Tests/"
    ]
  }
}
